extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up

                // register form
                form(method='POST' action='/register')
                    div.form-group
                        label(for='username') Pseudo:
                        input#username.form-control(type='text', placeholder='Pseudo' name='username')
                    div.form-group
                        label(for='lastname') Nom:
                        input#lastname.form-control(type='text', placeholder='Nom' name='lastname')
                    div.form-group
                        label(for='firstname') Prénom:
                        input#firstname.form-control(type='text', placeholder='Prénom' name='firstname')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='pw2') Confirm Password:
                        input#pw2.form-control(type='password' name='confirmPassword')
                    button.btn.btn-primary(type='submit') Sign up